{% extends 'base.html.twig' %}

{% block title %}Élèves{% endblock %}

{% block body %}
    <div class="container">
        <div class="card-header text-center">
            <h1 class="h1">Les élèves</h1>
            <div class="row">
                <div class="col">
                    <a href="{{ path ('student_add')}}" class="btn btn-primary btn-lg">Ajouter un élève</a>
                </div>
                <div class="col">
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="text" placeholder="Rechercher">
                        </form>
                </div>
                <div class="col">
                        <a href="#" class="btn btn-primary btn-lg">les groupes</a>
                </div>
                <div class="col">
                        <a href="#" class="btn btn-primary btn-lg">Dispositifs</a>
                </div>
                <div class="col">
                        <a href="#" class="btn btn-primary btn-lg">Activités</a>
                </div>
            </div>
        </div>
        <div class="container">
                <h2>Liste des élèves</h2>
            <div class="row">
                <div class="row">
                    {% for student in students %}
                    {% include 'student/_student.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
