{% extends 'teacher/base.html.twig' %}

{% block title %}Bonjour {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container mb-3">
        <div class="container-fluid">
            <h1 class="my-4">
            <i class="fas fa-school"></i> Les écoles</h1>
            <div class="alert alert-info my-4">
                <p>Retrouvez ici une vue globale de vos différents employeurs</p>
            </div>
            {% if teacher.schools == null %}
            <div class="alert alert-danger mt-3 text-center">
                <p>Vous n'avez actuellement pas d'employeur enregistré !</p>
            </div>
            {% endif %}
            <div class="row">
                <div class="col-8">
                    {% if teacher.schools != null %}
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Address</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for school in teacher.schools %}                                    <tr>
                                            <td>{{ school.title }}</td>
                                            <td>{{ school.address }}</td>
                                            <td>
                                                <div class="row">
                                                    <a href="{{ path('school_show', {'id': school.id}) }}" class="btn btn-primary my-2">
                                                    <i class="far fa-eye"> Voir</i>
                                                    </a>
                                                    <a href="{{ path('school_edit', {'id': school.id}) }}" class="btn btn-info my-2">
                                                    <i class="fas fa-edit"></i> Edit</a>
                                                    <a href="#" class="btn btn-danger my-2">
                                                    <i class="fas fa-graduate-user"></i> Élèves</a>
                                                </div>
                                            </td>
                                        </tr>
                                        {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                    {% endif %}
                </div>
                <div class="col">
                    <div class="col text-right">
                        <a href="{{ path ('school_index') }}" class="btn btn-info">
                        <i class="far fa-eye"></i> Visualiser les écoles</button></a></tr>
                        <a href="{{ path ('teacher_home') }}" class="btn btn-info">
                        <i class="fas fa-home"></i> Home</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
