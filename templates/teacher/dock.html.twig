        </div>
        <div class="col-8 text-center">
            <h2>dernières activités</h2>
                {% for i in 0..2 %}
                    <div class="row">
                        <div class="col text-center">
                            <a href="#" class="card bg-light mb-3">
                                <div class="card-header text-center">
                                    <h2>{{ title }}</h2>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">{{ introduction }}</h4>
                                </div>
                                <p class="card-text text-center">{{ students }}</p>
                            </a>
                        </div>
                    </div>    
                {% endfor %}
        </div>
        <div class="col ml-2 text-center">
            <h2>menu</h2>
                <div class="row">
                    <div class="col text-center">
                        <a href="#" class="btn btn-secondary mb-1">Projets</a>
