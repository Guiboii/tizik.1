{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Tâches à accomplir</h1>
    <br>
    <h2>Demandes de validation en attente</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Role</th>
                <th>Discipline</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.fullName }}</td>
                <td>Role</td>
                <td>Discipline</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
