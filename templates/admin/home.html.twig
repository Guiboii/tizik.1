{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Tâches à accomplir</h1>
    <br>
    <h2>Demandes de validation en attente</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Role demandé</th>
                <th>Discipline</th>
                <th>Ecoles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.fullName }}</td>
                <td>{{ user.wish }}</td>
                <td>Discipline</td>
                <td>Ecoles</td>
                <td> <a href="{{ path ('user_valid', {'slug' : user.slug, 'wish' : user.wish})}}" class="btn btn-primary"><i class="fas fa-check"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
