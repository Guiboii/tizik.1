{% extends 'admin/base.html.twig' %}

{% block title %}Administration des villes{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row text-align">
    <h1 class="my-5">Gestion des villes</h1>
    <a href="{{path('city_add')}}" class="href"><button class="btn-info">
    <i class="fas fa-city"></i> Ajouter une ville</button></a>
    </div>
    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for city in cities %}
            <tr>
                <td>{{city.id}}</td>
                <td>{{city.name}}</td>
                {#<td>{{school.city.schools}}</td>
                <td>{{school.city.households}}</td>#}
                <td><a href="{{ path('city_edit',{'slug': city.slug})}}" class="btn btn-primary"><i class="fas fa-city"></i></a>
                    <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
