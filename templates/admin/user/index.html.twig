{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Utilisateurs enregistrés</h1>
    <table class="table table-hover">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Username</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr class="text-center">
                <td>{{user.id}}</td>
                <td>{{user.username}}</td>
                <td><img src="{{user.picture}}" alt="" class="avatar avatar-mini mr-2">{{user.FirstName}}</td>
                <td>{{user.LastName}}</td>
                <td>{{user.email}}</td>
                <td><a href="{{ path ('user_show', {'slug' : user.slug })}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
