{% extends 'base.html.twig' %}

{% block title %}School{% endblock %}

{% block body %}
    <h1>School</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ school.title }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ school.address }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row text-center">
        <div class="col"></div>
            <a href="{{ path('school_index') }}" class="btn btn-primary">
            <i class="fas fa-school"></i>
             Retour à la liste des écoles</a>
        <div class="col">
            <a href="{{ path('school_edit', {'id': school.id}) }}" class="btn btn-primary"><i class="fas fa-check"></i> Ajouter cette école à ma liste</a>
        </div>
    </div>
    {#{{ include('school/_delete_form.html.twig') }}#}
{% endblock %}
